
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Web.Optimization
@model eUseControl.Web.Models.UserLogin



@Html.ValidationSummary(true)
@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "loginForm whiteSection col-md-4 col-sm-12" }))
{
    @Html.AntiForgeryToken()
    <form class="loginForm whiteSection col-md-4 col-sm-12">

        @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Credential, new
        {
            placeholder = "Username or email address",
            title = "Please enter your username",
            value = "",
            name = "username",
            id = "username",
            @class = "form-control"
        })

        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Password, new
        {
            @class = "form-control",
            type = "password",
            title = "Please enter your password.",
            placeholder = "Password",
            value = "",
            name = "password",
            id = "password"
        })


        <div class="loginForm__button-container">
            <button type="submit" class="btn">Log in</button>
            <a href="#" class="forgotPass">Forgot password?</a>
        </div>
    </form>
}


